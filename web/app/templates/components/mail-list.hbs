<div class="content {{if detailsShown 'halfsize'}}">
	{{#each emails as |email|}}
		{{#linkTo "mail" email.__id tagName="div" activeClass="selected"}}
		<div class="mail" {{action 'select' email}}>
			<div class="tab"></div>
			<div class="select"></div>
			<div class="from">{{email.from}}</div>
			<div class="subject">{{email.subject}}</div>
			<div class="received">{{format-date email.date}}</div>
		</div>
		{{/linkTo}}
	{{/each}}
</div>
{{yield}}